Tab3:CreateDropdown({Name="Priority (1=first, 3=last)",Options={"1","2","3"},CurrentOption={"1"},MultipleOptions=false,
    Callback=function(opt)
        farmPriority.altar = tonumber(opt[1]) or 1
        Rayfield:Notify({Title="Altar Farm",Content="Priority set to "..opt[1],Duration=2,Image=4483362458})
    end})
