    Callback=function(val)
        if val then
            altarActive=true
            pcall(function() ReplicatedStorage.RemoteEvents.Cultivate:FireServer() end)
            ensureMultiFarmRunning()
            Rayfield:Notify({Title="Altar Farm",Content="Started.",Duration=3,Image=4483362458})
        else
            altarActive=false
            pcall(function() ReplicatedStorage.RemoteEvents.Cultivate:FireServer() end)
            if not herbActive and not treasureActive then stopFlyNoclip() end
            Rayfield:Notify({Title="Altar Farm",Content="Stopped.",Duration=2,Image=4483362458})
        end
    end})
